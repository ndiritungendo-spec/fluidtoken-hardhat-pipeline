name: CI

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [20.19.5]  # Match what setup-node found

    steps:
      # 1. Checkout code
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2. Setup Node.js
      - name: Setup Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'npm'  # Automatically caches ~/.npm

      # 3. Cache node_modules (extra safety + speed)
      - name: Cache node_modules
        uses: actions/cache@v4
        id: node-modules-cache
        with:
          path: |
            node_modules
            ~/.npm
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      # 4. Install dependencies (strict, uses package-lock.json)
      - name: Install dependencies
        run: npm ci

      # 5. Compile Solidity contracts
      - name: Compile contracts
        run: npx hardhat compile

      # 6. Run tests
      - name: Run tests
        run: npx hardhat test

      # 7. (Optional) Generate coverage
      # - name: Run coverage
      #   run: npx hardhat coverage

      # 8. (Optional) Upload artifacts (e.g. compiled ABI)
      # - name: Upload build artifacts
      #   uses: actions/upload-artifact@v4
      #   with:
      #     name: hardhat-artifacts
      #     path: |
      #       artifacts/
      #       cache/