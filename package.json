{
  "name": "fluidtoken-hardhat",
  "version": "1.0.0",
  "description": "Gas-optimized FluidToken on Polygon",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "verify:mumbai": "hardhat run scripts/verify.js --network mumbai",
    "verify:polygon": "hardhat run scripts/verify.js --network polygon",
    "install:legacy": "npm install --legacy-peer-deps"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.1",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.1",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.9",
    "chai": "^4.5.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.17",
    "hardhat-gas-reporter": "^2.2.1",
    "solidity-coverage": "^0.8.13",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.3",
    "dotenv": "^16.4.7"
  },
  "overrides": {
    "ethers": "$ethers",
    "@nomicfoundation/hardhat-ethers": {
      "ethers": "$ethers"
    },
    "@nomicfoundation/hardhat-toolbox": {
      "ethers": "$ethers"
    },
    "@nomicfoundation/hardhat-verify": {
      "ethers": "$ethers"
    }
  }
}